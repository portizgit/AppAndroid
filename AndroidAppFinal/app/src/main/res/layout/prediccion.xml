<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prediccion"
    tools:context="com.example.pablo.androidappfinal.PrediccionActivity"
    android:fillViewport="false"
    android:background="#1eaadd">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Dia 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/bdia1"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:textColor="#1eaadd" />

        <Button
            android:text="Dia 2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/bdia2"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:textColor="#1eaadd"
            />

        <Button
            android:text="dia 3"
            android:layout_width="0dp"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/bdia3"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:textColor="#1eaadd"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Miercoles"
        android:id="@+id/txDia"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgResumen"
        android:layout_marginTop="12dp"
        android:layout_height="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Resumen"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Día lluvioso con nubes bajas"
        android:id="@+id/txResumen"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperatura"
        android:id="@+id/txtemperatura"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Min"
            android:id="@+id/textView3"
            android:layout_marginLeft="0dp"
            android:singleLine="false"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="8º"
            android:id="@+id/txtempMin"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="18º"
            android:id="@+id/txtempMax"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Viento"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/imgViento"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lluvia"
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30%"
            android:id="@+id/txLluvia"
            android:textColor="#ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sol"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Amanecer:"
            android:id="@+id/textView8"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="08:00"
            android:id="@+id/txAman"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Atardecer:"
            android:id="@+id/textView9"
            android:layout_marginLeft="18dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="19:00"
            android:id="@+id/txAtard"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:text="Ver previsión por horas"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:textColor="#1eaadd" />

</LinearLayout>
    </ScrollView>

